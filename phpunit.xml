<?xml version="1.0" encoding="utf-8" ?>
<phpunit
	colors="true"
	syntaxCheck="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnFailure="false">
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
            <exclude>
                <file>src/PexSpike.php</file>
                <file>src/Http/HttpParams.php</file>
                <directory suffix="Data.php">.</directory>
                <directory>src/ExchangeStore/HttpParams</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log 
            type="coverage-html"
            target="build/unittest/coverage"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"/>
        <log 
            type="coverage-clover"
            target="build/unittest/coverage/clover.xml" />
			<log type="coverage-source"  target="build/unittest/coverage/source"/>
        <log
            type="junit"
            target="build/unittest/logfile.xml"
            logIncompleteSkipped="false"/>
    </logging>

</phpunit>